<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="canvas_ClipOutOrClip"
            android:text="测试Canvas.clipOut()/Canvas.clip()方法"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="paint_Join_BEVEL_MITER_ROUND"
            android:text="测试Paint.Join( BEVEL MITER ROUND )值"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gradient_circle_progress"
            android:text="渐变圆环进度条"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>